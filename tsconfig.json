{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["DOM", "es2020"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/__test__/**/*"]
}
